@model ML.Departamento

@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAll</h2>


<div class="container">
    <div class=row>
        <div class="text-center">
            <h2>GetAll</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione un Departamento para editar  o presion "Agregar para registrar una nuevos"</h5>
            <hr />
        </div>
    </div>
</div>

<div style="float:right;">
    @Html.ActionLink("Agregar", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })
</div>

<br />
<table class="table table-hover table-striped table-bordered table-responsive" id="table_usuarios">
    <thead>
        <tr class="table-secondary">
            <td>Editar</td>
            <td style="display :none;">id</td>
            <td>Departamento</td>
            <td>ID Area</td>
            <td>Area</td>
        </tr>
    </thead>

    <tbody>
        @foreach (ML.Departamento departamento in Model.Departamentos)
        {
            <tr>
                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-warning glyphicon  glyphicon glyphicon-cog" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.idDepartamento})"><i class="bi bi-pencil-square" style="color: ivory"></i></a></td>
                <td style="display :none;">@departamento.idDepartamento </td>
                <td>@departamento.nombre</td>
                <td>@departamento.Area.idArea</td>
                <td>@departamento.Area.nombre</td>


                <td style="text-align: center; vertical-align: middle;"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Departamento", new { idDepartamento = departamento.idDepartamento})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"><i class="bi bi-eraser-fill" style="color: mintcream"></i></a></td>
            </tr>
        }

    </tbody>
</table>

